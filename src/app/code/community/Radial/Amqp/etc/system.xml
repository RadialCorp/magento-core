<config>
    <sections>
        <radial_core>
            <groups>
                <radial_amqp translate="label">
                    <label>Message Queue</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>8</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <hostname translate="label">
                            <label>Hostname</label>
                            <frontend_type>text</frontend_type>
                            <config_path>radial_amqp/connection/hostname</config_path>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </hostname>
                        <username translate="label">
                            <label>Username</label>
                            <frontend_type>text</frontend_type>
                            <config_path>radial_amqp/connection/username</config_path>
                            <validate>validate-alphanum</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </username>
                        <password translate="label">
                            <label>Password</label>
                            <frontend_type>password</frontend_type>
                            <config_path>radial_amqp/connection/password</config_path>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </password>
                        <validate_amqp_connection translate="button_label">
                            <label/>
                            <sort_order>40</sort_order>
                            <button_label>Test AMQP Connection</button_label>
                            <frontend_model>radial_amqp/system_config_testamqpconnection</frontend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </validate_amqp_connection>
                        <last_message_received>
                            <label>Last Test Message Received</label>
                            <sort_order>50</sort_order>
                            <frontend_type>label</frontend_type>
                            <backend_model>radial_amqp/adminhtml_system_config_backend_lasttestmessage</backend_model>
                            <config_path>radial_amqp/general/last_test_message_timestamp</config_path>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </last_message_received>
                    </fields>
                </radial_amqp>
            </groups>
        </radial_core>
    </sections>
</config>
